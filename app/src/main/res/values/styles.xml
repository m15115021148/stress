<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_center</item>
        <item name="colorPrimaryDark">@color/title_center</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:launchMode">singleTop</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="MenuTranslateStyle">
        <item name="android:windowEnterAnimation">@anim/translate_in</item>
        <item name="android:windowExitAnimation">@anim/translate_out</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CloseStartStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:textColor">@drawable/close_start_color_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/close_start_bg</item>
    </style>

</resources>
