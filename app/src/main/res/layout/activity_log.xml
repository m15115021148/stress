<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_down_up_bg"
    android:orientation="vertical"
    tools:context=".ui.SettingsActivity">

    <include
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/batteryInfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingEnd="@dimen/m_left"
        android:paddingStart="@dimen/m_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/log_battery_info"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSize" />

        <Switch
            android:checked="false"
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:switchMinWidth="60dp"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/pop_txt_bg" />

    </RelativeLayout>


</LinearLayout>